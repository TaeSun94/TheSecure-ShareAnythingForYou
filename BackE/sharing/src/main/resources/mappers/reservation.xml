<?xml version="1.0" encoding="UTF-8"?>
<!-- mappers/user.xml -->
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.sharing.dao.ReserveDao"> <!-- mybatis는 namespace필수!! -->
	<insert id="addReserve" parameterType="hashmap">
		INSERT INTO reservation (host_num, member_email)
		VALUES (#{host_num},#{member_email})
	</insert>
	
	<select id="getRid" parameterType="String" resultType="_int">
		SELECT rid
		FROM reservation
		ORDER BY rid DESC
		LIMIT 1
	</select>
	
	<insert id="addReserveDay" parameterType="hashmap">
		INSERT INTO reservation_days (rid, reserve_day)
		VALUES(#{rid}, #{reserve_day})
	</insert>
</mapper>